<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jerry.velocityvortexscouting.DisplayMessageActive"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <EditText
        android:id="@+id/competitionNameInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:hint="Enter the competition name."
        android:inputType="textPersonName"
        app:layout_constraintBaseline_toBaselineOf="@+id/competitionNameGuide"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/competitionNameGuide"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/competitionNameGuide"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="200dp"
        android:text="Competition Name"
        android:textSize="10sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/competionNumberOfMatchesGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="52dp"
        android:text="Number of Matches"
        android:textSize="10sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/competitionNameGuide" />

    <EditText
        android:id="@+id/competitionNumberOfMatchesInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:ems="10"
        android:hint="Enter the number of matches."
        android:inputType="number"
        app:layout_constraintBaseline_toBaselineOf="@+id/competionNumberOfMatchesGuide"
        app:layout_constraintHorizontal_bias="0.448"
        app:layout_constraintLeft_toRightOf="@+id/competionNumberOfMatchesGuide"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="startNewCompetition"
        android:text="Create Competition"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        android:layout_marginBottom="60dp" />

</android.support.constraint.ConstraintLayout>
